        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Wednesday 10-09-2014"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:gravity="center" />
    
    <TextView
        android:id="@+id/tvCaloriesLeft"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="420"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:layout_marginTop="10dp" />
    
       <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Calories reaming"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:gravity="center" />

       <!-- 
       		
        -->
       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content" 
           android:orientation="horizontal"
           android:weightSum="90"
           android:layout_marginTop="10dp">
           
            <TextView
	        android:id="@+id/tvCarbsLeft"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="100"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:layout_weight="30"
	        android:gravity="center"/>
            
            <TextView
	        android:id="@+id/tvProteinLeft"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="125"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:layout_weight="30" 
	        android:gravity="center"/>
            
            <TextView
	        android:id="@+id/tvFatLeft"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="124"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:layout_weight="30" 
	        android:gravity="center"/>          
       </LinearLayout>
       
        <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content" 
           android:orientation="horizontal"
           android:weightSum="90">
           
            <TextView
	        android:id="@+id/textView2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Carbs left"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:layout_weight="30"
	        android:gravity="center"/>
            
            <TextView
	        android:id="@+id/textView3"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Proteins left"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:layout_weight="30" 
	        android:gravity="center"/>
            
            <TextView
	        android:id="@+id/textView4"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Fat left"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:layout_weight="30" 
	        android:gravity="center"/>          
       </LinearLayout>
       
       <!-- ************************************************************** -->
       
        <TextView
        android:id="@+id/tvTotalCalories"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1600"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center" 
        android:layout_marginTop="10dp"/>
    
       <TextView
        android:id="@+id/textView5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Total Calories today"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:gravity="center" />
       
		<!-- ************************************************************** -->
		
       <Button
        android:id="@+id/bAddToDiary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to diary"
        android:layout_marginTop="10dp" />
       
         <Button
         android:id="@+id/bShowTodaysProducts"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Show today's products" />
         
          <Button
         android:id="@+id/bAddProductToDatabase"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Add product" />
             
       <!-- ************************************************************** -->

         <ScrollView
             android:id="@+id/scrollView2"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" 
             android:layout_marginTop="10dp">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="vertical" >
                 
				 <ListView
				     android:id="@android:id/list"
				     android:layout_width="fill_parent"
				     android:layout_height="168dp"
				     android:drawSelectorOnTop="false" />
				 
             </LinearLayout>
         </ScrollView>

</LinearLayout>
</ScrollView>